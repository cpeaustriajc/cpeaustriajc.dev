---
import { getImage } from "astro:assets";
import DefaultOGImage from "~/assets/images/opengraph/home.jpg";
import BaseHead from "~/components/BaseSEO.astro";
import CSSVariables from "~/components/CSSVariables.astro";
import GlobalStyles from "~/components/GlobalStyles.astro";
import Header from "~/components/Header.astro";
import type { SEOProps } from "~/types/common";

type Props = {
  meta: SEOProps;
};

const { meta } = Astro.props;

const optimizedOGImage = await getImage({
  src: meta.image ?? DefaultOGImage,
  width: 1200,
  height: 630,
  format: "jpeg",
});
const OGImageURL = new URL(optimizedOGImage.src, Astro.url);
---

<html dir="ltr" lang="en">
  <head>
    <BaseHead />
    <title>{meta.title}</title>
    <meta name="color-scheme" content="dark" />
    <meta name="description" content={meta.description} />
    <meta name="keywords" content={meta.keywords?.join(", ")} />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={meta.title} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:description" content={meta.description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={OGImageURL} />
    <meta property="og:image:alt" content={meta.imageAlt ?? meta.title} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:creator" content="@jayzersdotdev" />
    <meta name="twitter:description" content={meta.description} />
    <meta property="twitter:domain" content="https://jayzers.vercel.app" />
    <meta property="twitter:image" content={OGImageURL} />
    <meta property="twitter:image:alt" content={meta.imageAlt ?? meta.title} />
    <meta name="twitter:title" content={meta.title} />
    <meta property="twitter:url" content={Astro.url.href} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Roboto+Mono:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header />
    <slot />
    <GlobalStyles />
    <CSSVariables />
  </body>
</html>
