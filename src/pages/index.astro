---
import { getEntry } from 'astro:content';
import BaseLayout from "~/layouts/BaseLayout.astro";
import Projects from "~/pages/_components/Projects.astro";
import Posts from "./_components/Posts.astro";

const meta = await getEntry("meta", "home")
---

<BaseLayout {meta}>
  <main>
    <Projects />
    <Posts />
  </main>
</BaseLayout>

<style>
  main {
    scroll-behavior: smooth;
    display: grid;
    padding-inline: 1rem;
  }

  @media screen and (min-width: 768px) {
    main {
      padding-inline: 1rem;
      place-items: center;
    }
  }
</style>
