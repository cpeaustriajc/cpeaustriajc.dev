---
import BaseLayout from "~/layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import { getCollection, type CollectionEntry, getEntry } from "astro:content";
import ArrowLeft from "~/components/ArrowLeft.astro";

type Props = {
  entry: CollectionEntry<"posts">;
  author: CollectionEntry<"authors">;
};

export async function getStaticPaths() {
  const postEntries = await getCollection("posts", ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true;
  });

  return postEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;

const date = entry.data.publishDate.toLocaleDateString("en-PH", {
  year: "numeric",
  month: "long",
  day: "numeric",
  hour: "numeric",
  minute: "numeric",
});

const { Content } = await entry.render();

const author = await getEntry("authors", entry.data.author.id);
const meta = {
  title: entry.data.title,
  description: entry.data.description,
  image: entry.data.coverImage,
  keywords: entry.data.keywords,
};
---

<BaseLayout {meta}>
  <main
    class="grid w-full place-content-center place-items-center px-4 py-4 font-sans"
  >
    <header
      aria-label="Post Title and Image"
      class="grid gap-x-4 md:grid-cols-[repeat(1,min-content),minmax(320px,1024px)] md:grid-rows-[repeat(4,min-content),1fr]"
    >
      <a
        href="/posts"
        class="hidden grid-flow-col items-center gap-1 place-self-start rounded-md text-sm font-medium leading-6 text-neutral-400 transition-colors duration-500 hover:text-neutral-50 focus:outline focus:outline-2 focus:outline-violet-400 md:col-start-1 md:inline-grid"
        ><ArrowLeft />Back</a
      >
      <time
        class="border-neutral-500 px-1 text-sm text-neutral-500 md:col-start-2"
        datetime={entry.data.publishDate.toISOString()}
      >
        {date}
      </time>
      <h1
        class="text-balance text-4xl font-bold text-neutral-50 md:col-start-2"
      >
        {entry.data.title}
      </h1>
      <figure
        class="gap-2 text-neutral-500 md:col-start-2 md:inline-grid md:grid-flow-col md:grid-cols-[24px,1fr]"
      >
        <Image
          src={author.data.picture}
          class="rounded-full"
          width={24}
          height={24}
          quality={75}
          format="webp"
          loading="eager"
          alt={`The GitHub profile photo of ${author.data.name}`}
        />
        <figcaption>{author.data.name}</figcaption>
      </figure>
      <figure class="place-self-center py-4 md:col-span-3">
        <Image
          src={entry.data.coverImage}
          alt={entry.data.coverImageAlt}
          width={960}
          height={540}
          quality={75}
          format="webp"
          loading="eager"
          class="not-prose aspect-[16/9] rounded"
        />
        <figcaption class="text-center">{entry.data.coverImageAlt}</figcaption>
      </figure>
    </header>
    <article
      class="prose prose-blue prose-invert text-pretty focus:outline focus:outline-2 focus:outline-violet-400 prose-code:font-mono prose-pre:font-mono"
    >
      <Content />
    </article>
  </main>
</BaseLayout>
