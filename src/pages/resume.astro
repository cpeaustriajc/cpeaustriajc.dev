	<body class="font-sans">
		<header class="max-w-prose mx-auto">
			<section class="flex flex-col md:flex-row gap-8">
				<figure>
					<img
						src="/assets/portrait-square.webp"
						alt="Profile picture of John Carlo Austria"
						class="rounded-full"
						width="128"
						height="128"
					/>
				</figure>
				<figcaption>
