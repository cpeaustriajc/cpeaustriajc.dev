---
import Head from "@/components/Head.astro";
import DefaultLayout from "@/layouts/DefaultLayout.astro";
import { Image } from "@astrojs/image/components";
---

<DefaultLayout>
	<Head slot="head">
		<title>404 | John Carlo Austria</title>
		<meta
			name="description"
			content="Uh oh! It seems you have visited a link in my website that does not exist, please go back as there is nothing to see here!"
		/>
	</Head>
	<main
		class="min-h-screen flex flex-col items-center justify-center bg-[url('/graph-paper.svg')]"
		slot="content"
	>
		<Image
			src={import("../assets/cat-loading.jpeg")}
			aspectRatio="16:9"
			format="webp"
			width={640}
			height={360}
			class="rounded-md my-8 dark:border-neutral-700 border-neutral-200 border-2"
			alt="Cat does not understand where you want to go? Cat is not happy, cat wants to go back to the home page :<"
		/>
		<h1 class="text-5xl font-bold dark:text-neutral-50">404 - Content not Found</h1>
	</main>
</DefaultLayout>
