---
import { getCollection } from "astro:content";
import Badge from "~/components/Badge.astro";

const skills = await getCollection("skills");
---

<section class="py-48 md:py-96">
  <h2 class="text-6xl font-bold leading-loose text-neutral-50 md:text-8xl">
    Skills
  </h2>
  <p class="text-xl font-semibold text-neutral-50 md:text-6xl">
    The tech stack that I use to help me go from development to production
  </p>
  <ul
    class="grid gap-4 py-8 grid-cols-2 md:grid-cols-3"
  >
    {
      skills.map((skill) => (
        <li>
          <Badge icon={skill.data.icon} title={skill.data.title} description={skill.data.description} />
        </li>
      ))
    }
  </ul>
</section>
