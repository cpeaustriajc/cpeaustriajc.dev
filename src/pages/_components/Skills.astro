---
import { getCollection } from "astro:content";
import { Icon } from "astro-icon/components";

const skills = await getCollection("skills");
---

<section>
  <h2>Skills</h2>
  <p>The tech stack that I use to help me go from development to production</p>
  <ul>
    {
      skills.map((skill) => (
        <li>
          <Icon name={skill.data.icon} size={36} title={skill.data.title} />
          <strong>{skill.data.title}</strong>
          <small>{skill.data.description}</small>
        </li>
      ))
    }
  </ul>
</section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: var(--size-3);
    padding: unset;
  }

  li {
    display: grid;
    grid-template-columns: min-content auto;
    grid-template-rows: 1fr 1fr;
    list-style-type: none;
    column-gap: var(--size-2);
  }

  [data-icon] {
    grid-row: span 2;
    place-self: center;
    background-image: linear-gradient(
      180deg,
      var(--gray-7) 0%,
      var(--gray-8) 30%
    );
    padding: var(--size-2);
    border: solid var(--border-size-1) hsl(var(--gray-1-hsl) / 5%);
    border-radius: var(--radius-2);
  }
</style>

<style>
  section {
    max-width: 65ch;
  }
</style>
