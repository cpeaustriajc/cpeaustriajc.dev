<style is:global>
  @layer base, components, content;

  @layer base {
    :where(*),
    :where(*::before),
    :where(*::after) {
      box-sizing: border-box;
    }

    img {
      display: block;
      max-inline-size: 100%;
    }

    :where(body) {
      margin: unset;
      min-height: 100dvh;
      color: var(--gray-1);
      background-color: var(--gray-11);
      font-family: "Inter", sans-serif;
    }
  }

  @layer components {
    .btn {
      display: inline flex;
      align-items: center;
      justify-content: center;
      gap: var(--size-2);
      color: var(--gray-1);
      border-radius: var(--radius-2);
      background: var(--gray-10);
      border-color: hsl(var(--gray-7-hsl));
      height: 2.25em;
      border-style: solid;
      border-width: var(--border-size-1);
      font-size: var(--font-size-1);
      font-weight: var(--font-weight-5);
      line-height: var(--font-lineheight-3);
      padding-block: var(--size-2);
      padding-inline: var(--size-3);
      transition-property: all;
      transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
      transition-duration: 500ms;
      text-decoration: none;

      &:hover {
        border-color: var(--gray-5);
        background-color: var(--gray-9);
      }
    }

    .btn:has(.rounded) {
      border-radius: var(--radius-round);
    }

    .btn.contact {
      display: none;
      background-color: hsl(var(--gray-1-hsl) / 5%);
      font-size: var(--font-size-0);
      box-shadow: 0 0 16px 4px hsl(var(--blue-1-hsl));
    }

    @media (min-width: 768px) {
      .btn.contact {
        display: inline flex;
      }
    }

    .navigation-link {
      border-radius: var(--radius-round);
      font-size: var(--font-size-0);
      font-weight: var(--font-weight-5);
      color: var(--gray-1);
      outline-offset: var(--size-1);
      text-decoration: none;
      transition-property: color, background-color, border-color, fill, stroke;
      transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
      transition-duration: 500ms;
    }

    .navigation-link:hover {
      color: var(--blue-5);
    }

    .navigation-link:focus {
      outline-style: solid;
      outline-width: var(--border-size-1);
      outline-color: var(--blue-5);
    }
  }

  @layer content {
    .content p {
      margin-block: var(--size-3);
    }

    .content:has(p) {
      text-wrap: pretty;
      font-size: var(--font-size-fluid-0);
      line-height: var(--font-lineheight-3);
    }

    .content :where(pre) {
      overflow-x: scroll;
      font-size: var(--font-size-fluid-0);
      line-height: var(--font-lineheight-3);
    }

    .content img {
      width: max-content;
      height: auto;
      display: block;
    }

    .content {
      padding-block: var(--size-3);
      max-inline-size: var(--size-content-3);
    }

    .content :where(a) {
      font-weight: var(--font-weight-5);
    }

    .content :where(strong) {
      font-weight: var(--font-weight-6);
    }

    .content :where(pre) {
      border-radius: var(--radius-2);
    }
  }
</style>
