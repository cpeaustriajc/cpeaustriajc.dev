<style is:global>
  @layer base, components, content;

  @layer base {
    :root {
      color-scheme: light dark;
    }

    :where(*),
    :where(*::before),
    :where(*::after) {
      box-sizing: border-box;
    }

    img {
      display: block;
      max-inline-size: 100%;
    }

    :where(body) {
      margin: unset;
      min-height: 100dvh;
      color: light-dark(var(--gray-11), var(--gray-1));
      background-color: light-dark(var(--gray-1), var(--gray-9));
      font-family: "Inter", sans-serif;
    }

    @media (prefers-color-scheme: dark) {
      .astro-code,
      .astro-code span {
        color: var(--shiki-dark) !important;
        background-color: var(--shiki-dark-bg) !important;
        /* Optional, if you also want font styles */
        font-family: "Roboto Mono", monospace !important;
        font-style: var(--shiki-dark-font-style) !important;
        font-weight: var(--shiki-dark-font-weight) !important;
        text-decoration: var(--shiki-dark-text-decoration) !important;
      }
    }
  }

  @layer components {
    .btn {
      display: inline flex;
      align-items: center;
      justify-content: center;
      gap: var(--size-2);
      color: var(--blue-0);
      border-radius: var(--radius-2);
      background: var(--blue-10);
      border-color: var(--blue-6);
      height: 2.25em;
      border-style: solid;
      border-width: var(--border-size-1);
      font-size: var(--font-size-1);
      font-weight: var(--font-weight-5);
      line-height: var(--font-lineheight-3);
      padding-block: var(--size-2);
      padding-inline: var(--size-3);
      transition-property: all;
      transition-timing-function: var(--ease-1);
      transition-duration: 200ms;
      text-decoration: none;

      &:hover {
        border-color: var(--gray-5);
        background-color: var(--gray-9);
      }
    }

    .btn:has(.rounded) {
      border-radius: var(--radius-round);
    }

    .navigation-link {
      border-radius: var(--radius-round);
      font-size: var(--font-size-0);
      font-weight: var(--font-weight-5);
      color: var(--gray-1);
      outline-offset: var(--size-1);
      text-decoration: none;
      transition-property: color, background-color, border-color, fill, stroke;
      transition-timing-function: var(--ease-1);
      transition-duration: 500ms;
    }

    .navigation-link:hover {
      color: var(--blue-5);
    }

    .navigation-link:focus {
      outline-style: solid;
      outline-width: var(--border-size-1);
      outline-color: var(--blue-5);
    }
  }

  @layer content {
    .content {
      padding-block: var(--size-3);
      max-inline-size: var(--size-content-3);
      padding-inline: var(--size-2);
    }

    .content :where(h1) {
      color: light-dark(var(--gray-11), var(--gray-2));
      font-size: var(--font-size-fluid-3);
      line-height: var(--font-lineheight-3);
      font-weight: var(--font-weight-6);
    }

    .content :where(h2) {
      color: light-dark(var(--gray-11), var(--gray-2));
      font-size: var(--font-size-fluid-2);
      line-height: var(--font-lineheight-3);
      font-weight: var(--font-weight-6);
    }

    .content :where(h3) {
      color: light-dark(var(--gray-11), var(--gray-2));
      font-size: var(--font-size-fluid-1);
      line-height: var(--font-lineheight-3);
      font-weight: var(--font-weight-6);
    }

    .content :where(h4) {
      color: light-dark(var(--gray-11), var(--gray-2));
      font-size: var(--font-size-fluid-0);
      line-height: var(--font-lineheight-3);
      font-weight: var(--font-weight-6);
    }

    .content :where(p) {
      text-wrap: pretty;
      margin-block: var(--size-3);
      font-size: var(--font-size-fluid-1);
      line-height: var(--font-lineheight-3);
      color: light-dark(var(--gray-11), var(--gray-4));
    }

    .content :where(li) {
      text-wrap: pretty;
      margin-block: var(--size-3);
      font-size: var(--font-size-fluid-1);
      line-height: var(--font-lineheight-3);
      color: light-dark(var(--gray-11), var(--gray-4));
    }

    .content :where(pre) {
      overflow-x: scroll;
      font-size: var(--font-size-fluid-0);
      line-height: var(--font-lineheight-3);
    }

    .content :where(img) {
      width: max-content;
      height: auto;
      display: block;
    }

    .content :where(a) {
      font-weight: var(--font-weight-5);
    }

    .content :where(strong) {
      color: light-dark(var(--gray-11), var(--gray-2));
      font-weight: var(--font-weight-6);
    }

    .content :where(pre) {
      border-radius: var(--radius-2);
    }
  }
</style>
