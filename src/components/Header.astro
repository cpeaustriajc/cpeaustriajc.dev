---
import DropdownMenu from "./DropdownMenu.astro";
---

<header
  class="inline-flex w-full items-center justify-between p-4 lg:px-40 lg:py-10"
>
  <a href="/">
    <img
      src="/logo.svg"
      width="48"
      height="48"
      alt="John Carlo Austria's Logo"
    />
  </a>
  <nav
    class="hidden rounded-full border border-neutral-800 bg-neutral-950 px-4 py-2 md:block"
  >
    <ul class="flex flex-row items-center gap-4">
      <li>
        <a
          href="https://read.cv/jaycedotbin"
          rel="noopener noreferrer"
          target="_blank"
          class="h-9 rounded-full text-sm font-medium leading-6 text-neutral-400 transition-colors duration-500 hover:text-neutral-50"
        >
          Resume
        </a>
      </li>
      <li>
        <a
          href="/posts"
          class="h-9 rounded-full text-sm font-medium leading-6 text-neutral-400 transition-colors duration-500 hover:text-neutral-50"
        >
          Posts
        </a>
      </li>
      <li>
        <a
          href="/projects"
          class="h-9 rounded-full text-sm font-medium leading-6 text-neutral-400 transition-colors duration-500 hover:text-neutral-50"
        >
          Projects
        </a>
      </li>
    </ul>
  </nav>
  <a
    href="mailto:cpe.austria.johncarlo@gmail.com"
    class="hidden min-h-[2rem] min-w-[4rem] items-center justify-center gap-2 rounded-full bg-violet-600 px-4 py-1 text-sm font-medium leading-6 text-neutral-50 transition-all duration-500 hover:bg-transparent hover:ring-1 hover:ring-violet-600 md:inline-flex"
    >Contact</a
  >
  <DropdownMenu />
</header>
