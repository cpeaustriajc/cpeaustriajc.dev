---
import DropdownMenu from "./DropdownMenu.astro";
---

<header
  class="lg:px-40 p-4 lg:py-10 inline-flex justify-between items-center w-full"
>
  <a href="/">
    <img
      src="/logo.svg"
      width="48"
      height="48"
      alt="John Carlo Austria's Logo"
    />
  </a>
  <nav
    class="bg-neutral-950 border rounded-full py-2 px-4 border-neutral-800 hidden md:block"
  >
    <ul class="flex flex-row gap-4 items-center">
      <li>
        <a
          href="https://read.cv/jaycedotbin"
          rel="noopener noreferrer"
          target="_blank"
          class="font-medium text-sm leading-6 text-neutral-400 hover:text-neutral-50 transition-colors duration-500 rounded-full h-9"
        >
          Resume
        </a>
      </li>
      <li>
        <a href="/posts" class="font-medium text-sm leading-6 text-neutral-400 hover:text-neutral-50 transition-colors duration-500 rounded-full h-9">
          Posts
        </a>
      </li>
      <li>
        <a
          href="/projects"
          class="font-medium text-sm leading-6 text-neutral-400 hover:text-neutral-50 transition-colors duration-500 rounded-full h-9"
        >
          Projects
        </a>
      </li>
    </ul>
  </nav>
  <a
    href="mailto:cpe.austria.johncarlo@gmail.com"
    class="text-neutral-50 rounded-full min-w-[4rem] min-h-[2rem] justify-center items-center md:inline-flex gap-2 bg-violet-600 hover:bg-transparent hover:ring-1 hover:ring-violet-600 transition-all duration-500 px-4 py-1 font-medium text-sm leading-6 hidden"
    >Contact</a
  >
  <DropdownMenu />
</header>
