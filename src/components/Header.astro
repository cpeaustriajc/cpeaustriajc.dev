<style>
  .icon {
    color: light-dark(var(--gray-11), var(--gray-1));
    aspect-ratio: 1 / 1;
  }

  header {
    display: grid;
    grid-auto-flow: column;
    place-content: space-between;
    place-items: center;
    gap: var(--size-7);
    padding-inline: 1rem;
  }

  ul {
    display: inline grid;
    grid-auto-flow: column;
    padding: 0;
    gap: var(--size-7);
    list-style-type: none;

    & li {
      padding: 0;
    }
  }

  @media screen and (min-width: 768px) {
    header {
      padding-inline: var(--size-13);
    }
  }
</style>
