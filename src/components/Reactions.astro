<script>
  type Reactions =
    | "like"
    | "love"
    | "dislike"
    | "haha"
    | "sad"
    | "angry"
    | "surprised";

  class ReactionsList extends HTMLElement {
    constructor() {
      super();
    }

    private likeCount = 0;
    private loveCount = 0;
    private dislikeCount = 0;
    private hahaCount = 0;
    private sadCount = 0;
    private angryCount = 0;
    private surprisedCount = 0;

    private usedReactions: Record<Reactions, boolean> = {
      like: false,
      love: false,
      dislike: false,
      haha: false,
      sad: false,
      angry: false,
      surprised: false,
    };

    handleReaction(reaction: Reactions) {
      if (!this.usedReactions[reaction]) {
        switch (reaction) {
          case "like":
            this.likeCount++;
            break;
          case "love":
            this.loveCount++;
            break;
          case "dislike":
            this.dislikeCount++;
            break;
          case "haha":
            this.hahaCount++;
            break;
          case "sad":
            this.sadCount++;
            break;
          case "angry":
            this.angryCount++;
            break;
          case "surprised":
            this.surprisedCount++;
            break;
        }
        const inputs: NodeListOf<Element> = document.querySelectorAll(
          'reactions-list input[type="radio"]',
        );
        inputs.forEach((input: Element) => {
          (input as HTMLInputElement).disabled = true;
        });

        // Optionally, you can add a visual indicator that the reaction was recorded
        const selectedLabel = document.querySelector(
          `label[for="${reaction}"]`,
        );
        if (selectedLabel) {
          selectedLabel.classList.add("selected");
        }
      }
    }
  }
  customElements.define("reactions-list", ReactionsList);
</script>

