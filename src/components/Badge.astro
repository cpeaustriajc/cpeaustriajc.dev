---
type Props = {
  icon: string;
  title: string;
  description: string;
};

const { icon, title, description } = Astro.props;
---

<iconify-icon
  icon={icon}
  width="1.5em"
  height="1.5em"
  inline
  alt={`Icon for ${title}`}></iconify-icon>
<strong>{title}</strong>
<small>{description}</small>
<script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"
></script>

<style>
  iconify-icon {
    grid-row: span 2;
    place-self: center;
  }
</style>
