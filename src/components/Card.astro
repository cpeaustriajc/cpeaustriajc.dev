---
type Props = {
  title: string;
  link: string;
  description: string;
  site: string;
  status: "active" | "archived";
};

const { link, title, description, site, status } = Astro.props;
---

<li>
  <h3>{title} {status === "archived" && "(Archived)"}</h3>
  <p>{description}</p>
  <a href={link} target="_blank" class="btn">View on GitHub</a>
  <a
    href={site}
    target="_blank"
    class:list={["btn", status === "archived" && "disabled"]}
    >View Application</a
  >
</li>

<style>
  h3 {
    margin: unset;
  }

  p {
    margin: unset;
  }

  li {
    display: grid;
    grid-template-rows: min-content 1fr 2.25em;
    background: light-dark(var(--gray-3), var(--gray-10));
    border-style: solid;
    border-width: var(--border-size-1);
    border-color: light-dark(var(--gray-4), var(--gray-8));
    border-radius: var(--radius-2);
    padding-inline: var(--size-3);
    padding-block: var(--size-2);
    align-items: start;
    justify-items: stretch;
    row-gap: var(--size-6);
  }

  .disabled {
    opacity: 50%;
    cursor: not-allowed;
    pointer-events: none;
  }
</style>
