---
import type { CollectionEntry } from "astro:content";

interface Props {
  posts: CollectionEntry<"posts">;
}

const { posts } = Astro.props;
---

<li>
  <a href={`/posts/${posts.slug}`}>
    <article
      class="flex flex-row justify-between pb-4 my-4 text-sm text-zinc-500 dark:text-zinc-200 font-bold hover:dark:text-zinc-400 hover:text-zinc-600 duration-300 transition-colors motion-reduce:transition-none"
    >
      <h2 class="truncate overflow-hidden max-w-[32ch]">
        {posts.data.title}
      </h2>
      <time datetime={posts.data.publishedDate.toISOString()}
        >{posts.data.publishedDate.toLocaleDateString()}</time
      >
    </article>
  </a>
</li>
