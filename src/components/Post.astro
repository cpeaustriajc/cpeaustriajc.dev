---
import type { Frontmatter } from '@/types/frontmatter';
import type { MarkdownInstance } from 'astro';

const { post } = Astro.props as { post: MarkdownInstance<Frontmatter> };
---

<li>
	<a href={post.url}>
		<article
			class="flex flex-row justify-between pb-4 my-4 text-sm text-zinc-500 dark:text-zinc-200 font-bold hover:dark:text-zinc-400 hover:text-zinc-600 duration-300 transition-colors motion-reduce:transition-none"
		>
			<h2>
				{post.frontmatter.title}
			</h2>
			<time datetime={post.frontmatter.date.format}
				>{post.frontmatter.date.content}</time
			>
		</article>
	</a>
</li>
