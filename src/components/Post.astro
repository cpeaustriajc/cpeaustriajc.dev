---
import { Image, Picture } from "astro:assets";
import { getEntry, type CollectionEntry } from "astro:content";

type Props = {
  posts: CollectionEntry<"posts">;
};

const { posts } = Astro.props;

const formattedDate = posts.data.publishDate.toLocaleDateString("en-PH", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
const author = await getEntry(posts.data.author);

const isoDate = posts.data.publishDate.toISOString();
---

<li>
  <h2>
    {posts.data.title}
  </h2>
  <time datetime={isoDate}>
    {formattedDate}
  </time>
  <figure class="post">
    <Picture
      src={posts.data.coverImage}
      alt={posts.data.coverImageAlt}
      widths={[240, 480, 640, 1280, 1920]}
      formats={["jpeg", "webp", "avif"]}
      loading="lazy"
    />
  </figure>

  <figure class="author">
    <Image
      src={author.data.picture}
      width={24}
      height={24}
      alt={`${author.data.name}, the author of the blog post`}
    />
    <figcaption>
      {author.data.name}
    </figcaption>
  </figure>
  <p>
    {posts.data.description}
  </p>
  <a href={`/posts/${posts.slug}`}>Read</a>
</li>

<style>
  li {
    display: grid;
    gap: var(--size-3);
    grid-template-rows:
      100px
      minmax(var(--font-size-1), auto)
      auto
      minmax(var(--font-size-1), auto)
      minmax(16px, 72px)
      min-content;
  }

  figure {
    margin: unset;
  }

  .post img {
    aspect-ratio: 16 / 9;
    border-radius: 8px;
    height: auto;
    border: solid var(--border-size-1) hsl(var(--gray-7-hsl));
  }

  h1 {
    max-inline-size: var(--size-content-2);
    text-wrap: balance;
  }

  .author {
    display: inline flex;
    gap: var(--size-2);
    place-items: center;
  }

  .author img {
    border-radius: var(--radius-round);
  }

  a {
    display: inline;
    background-color: var(--gray-10);
    border: solid var(--border-size-1) var(--gray-7);
    text-align: center;
    padding-inline: var(--size-3);
    padding-block: var(--size-2);
    border-radius: var(--radius-2);
    color: var(--blue-1);
    text-decoration: none;
    transition: all 250ms ease-out;

    &:hover {
      background-color: var(--gray-9);
      border-color: var(--gray-6);
    }
  }
</style>
